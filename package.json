{
  "name": "@studiometa/cli-test-redirection",
  "version": "0.5.0",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "@studiometa/cli-test-redirection": "bin/test-redirection.js",
    "cli-test-redirection": "bin/test-redirection.js",
    "test-redirection": "bin/test-redirection.js"
  },
  "main": "src/index.js",
  "type": "module",
  "files": [
    "bin/*",
    "src/*",
    "README.md"
  ],
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "cac": "^6.7.12",
    "chalk": "^5.0.1",
    "fastq": "^1.13.0",
    "jest-diff": "^27.5.1",
    "log-update": "^5.0.0"
  },
  "scripts": {
    "test": "node bin/test-redirection.js",
    "build": "npm run build:esbuild && npm run build:pkg && npm run build:clean",
    "build:esbuild": "esbuild bin/test-redirection.js --bundle --platform=node --outfile=.temp/bundle.cjs",
    "build:pkg": "pkg ./.temp/bundle.cjs --outpath=./build -t latest-alpine,latest-macos",
    "build:clean": "rm .temp/bundle.cjs"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "esbuild": "^0.15.15",
    "pkg": "^5.8.0"
  }
}
